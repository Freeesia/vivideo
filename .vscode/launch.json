{
  // Use IntelliSense to find out which attributes exist for C# debugging
  // Use hover for the description of the existing attributes
  // For further information visit https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md
  "version": "0.2.0",
  "configurations": [
    {
      "name": "server",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build:server",
      "program": "${workspaceFolder}/Server/bin/Debug/netcoreapp3.1/Server.dll",
      "args": [],
      "cwd": "${workspaceFolder}/Server",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "^\\s*Now listening on:\\s+(http://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
    },
    {
      "name": "worker",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build:worker",
      "program": "${workspaceFolder}/Worker/bin/Debug/netcoreapp3.1/Worker.dll",
      "args": [],
      "cwd": "${workspaceFolder}/Worker",
      "console": "internalConsole",
      "stopAtEntry": false
    }
  ],
  "compounds": [
    {
      "name": "server/worker",
      "configurations": [
        "server",
        "worker"
      ],
      "preLaunchTask": "compose-up"
    }
  ]
}